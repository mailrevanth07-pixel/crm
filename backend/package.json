{
  "name": "crm-backend",
  "version": "1.0.0",
  "description": "CRM Backend with Sequelize and PostgreSQL",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "migrate:sync": "ts-node -e \"import { sequelize } from './src/models'; sequelize.sync({ force: false }).then(() => { console.log('Database synced'); process.exit(0); });\"",
    "seed": "npx sequelize-cli db:seed:all",
    "seed:run": "ts-node scripts/setup.ts",
    "setup": "ts-node scripts/setup.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "docker:build": "docker build -t crm-backend .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t crm-backend-dev .",
    "docker:run": "docker run -p 3001:3001 --env-file .env crm-backend",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose up --build",
    "docker:full:dev": "docker-compose -f ../docker-compose.full.yml up --build",
    "docker:full:prod": "docker-compose -f ../docker-compose.prod.full.yml up --build",
    "docker:full:down": "docker-compose -f ../docker-compose.full.yml down",
    "docker:full:logs": "docker-compose -f ../docker-compose.full.yml logs -f",
    "docker:down": "docker-compose down",
    "docker:down:dev": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose logs -f backend",
    "docker:logs:dev": "docker-compose -f docker-compose.dev.yml logs -f backend",
    "docker:shell": "docker-compose exec backend sh",
    "docker:shell:dev": "docker-compose -f docker-compose.dev.yml exec backend sh",
    "docker:migrate": "docker-compose exec backend npm run migrate",
    "docker:seed": "docker-compose exec backend npm run seed:run",
    "docker:setup": "docker-compose exec backend npm run setup",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@socket.io/redis-adapter": "^8.2.1",
    "bcrypt": "^5.1.1",
    "bull": "^4.12.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-slow-down": "^3.0.0",
    "helmet": "^8.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "redis": "^4.6.10",
    "sequelize": "^6.35.0",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "yjs": "^13.6.10"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bull": "^4.10.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "axios": "^1.6.0",
    "eslint": "^8.55.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "sequelize-cli": "^6.6.2",
    "socket.io-client": "^4.7.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16"
  },
  "keywords": [
    "crm",
    "sequelize",
    "postgresql",
    "nodejs",
    "typescript"
  ],
  "author": "",
  "license": "MIT"
}
