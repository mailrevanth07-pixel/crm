{
  "name": "crm-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "docker:build": "docker build -t crm-frontend .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t crm-frontend-dev .",
    "docker:run": "docker run -p 3000:3000 --env-file .env crm-frontend",
    "docker:dev": "docker-compose -f ../docker-compose.full.yml up --build",
    "docker:prod": "docker-compose -f ../docker-compose.prod.full.yml up --build",
    "docker:down": "docker-compose -f ../docker-compose.full.yml down",
    "docker:logs": "docker-compose -f ../docker-compose.full.yml logs -f frontend"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "js-cookie": "^3.0.5",
    "mqtt": "^5.3.4",
